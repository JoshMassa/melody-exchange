<div class="container">
  <div class="row padding-override" style="padding-right: 0; padding-left: 0;">
    <div class='w-50 card mb-3 mt-2 col-12 mx-auto'>
      <h3 class='card-header text-success d-flex justify-content-center'>Instrument for sale!</h3>
      <div class='card-header text-body-tertiary pb-2 d-flex justify-content-center'>
        Originally posted by
        {{post.user.name}}
        on
        {{format_date post.createdAt}}
        at
        {{format_time post.createdAt}}
      </div>
      <div class='card-body pb-0'>
        <p class='card-title text-center' style="font-size: 10px;"><a
            href='/posts/{{post.id}}'
            class='post-link text-dark-emphasis fs-5 d-flex justify-content-center'
          >{{post.title}}</a>
        </p>
      <div class="card-price mb-3 d-flex justify-content-center">
        <span class='badge mt-2 bg-success py-2 fs-7'>${{post.price}}</span>
      </div>
      </div>
      {{#if post.image}}
        <img src='{{post.image}}' class='card-img-top mx-auto' alt='Product Image' style="width: 250px;"/>
      {{else}}
        <svg
          xmlns='http://www.w3.org/2000/svg'
          class='d-block user-select-none ms-4'
          width='100%'
          height='100%'
          aria-label='Placeholder: Image cap'
          focusable='false'
          role='img'
          preserveAspectRatio='xMidYMid slice'
          viewBox='0 0 318 180'
          style='font-size:1.125rem;text-anchor:middle'
        >
          <rect
            y='18'
            x='5'
            rx='8'
            ry='8'
            width='90%'
            height='90%'
            fill='#868e96'
          ></rect>
          <text
            x='46%'
            y='53%'
            text-anchor='middle'
            fill='#dee2e6'
            dy='.3em'
          >Product img</text>
        </svg>
      {{/if}}
      <div class="d-flex mt-4 mb-3 border-top border-bottom px-2 py-3">
        <p class='card-subtitle text-muted mx-auto'>{{post.content}}</p>
      </div>
      <div class='card-options mb-2 d-flex justify-content-center'>
        <a href='#' class='card-link text-decoration-none'>Buy now</a>
        <a href='#' id="comment-link" class='card-link text-decoration-none'>Comment</a>
      </div>

      

{{!-- comment cards --}}
<div id='form-adjust' class="container">
  <div class="row">
    <h2 id="commentHeader" class="text-center fs-5 py-2">Recent comments:</h2>
    <div class="comments">
      {{#each post.comments}}
      <div class="card border m-2" style="border-radius: 10px">
        <div class="card-footer text-muted text-right text-bg-success" style="border-radius: 10px 10px 0px 0px;">
          <small style="color: white">
            Posted by {{user.name}} on {{format_date createdAt}} at {{format_time createdAt}}
          </small>
        </div>
        <div class="card-body">
          <p class="card-text">{{content}}</p>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
  
</div>
  </div>
</div>

