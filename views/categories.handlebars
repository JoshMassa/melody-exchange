{{! post card }}
<div class="row">
    <div>
      <h2 class="text-center mt-5 mb-5">You're searching for <span class="text-success">{{categoryName}}</span></h2>
    </div>
</div>

{{#each guitarsPosts as |guitarPost|}}
  <section class='d-flex justify-content-center'>
    <div class='container w-50 card mb-3'>
      <h3 class='card-header mt-2'>Instrument for sale!</h3>
      <div class='card-body pb-0'>
        <h5 class='card-title'><a
            href='/posts/{{id}}'
            class='post-link text-secondary'
          >{{title}}</a></h5>
          <span class='badge bg-success mb-2'>${{price}}</span>
      </div>
      <div>
        {{#if image}}
          <img src='{{image}}' class='card-img-top' alt='Product Image' />
        {{else}}
          <svg
            xmlns='http://www.w3.org/2000/svg'
            class='d-block user-select-none ms-4'
            width='100%'
            height='100%'
            aria-label='Placeholder: Image cap'
            focusable='false'
            role='img'
            preserveAspectRatio='xMidYMid slice'
            viewBox='0 0 318 180'
            style='font-size:1.125rem;text-anchor:middle'
          >
            <rect
              y='18'
              rx='8'
              ry='8'
              width='80%'
              height='80%'
              fill='#868e96'
            ></rect>
            <text
              x='40%'
              y='50%'
              text-anchor='middle'
              fill='#dee2e6'
              dy='.3em'
            >Product img</text>
          </svg>
        {{/if}}
      </div>
      <div class="card-content">
        <p class='card-subtitle text-muted mt-4 mx-3'>{{content}}</p>
      </div>
      <div class='card-body'>
        <a href='#' class='card-link text-secondary'>Buy now</a>
        <a href='#' class='card-link text-secondary'>Comment</a>
      </div>
      <div class='card-footer text-body-tertiary mb-2'>
        Posted by
        {{user.name}}
        on
        {{format_date createdAt}}
        at
        {{format_time createdAt}}
      </div>
    </div>
  </section>
{{/each}}

