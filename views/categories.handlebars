{{! Category Cards }}
<div class='row'>
  <div>
    <h1 class='text-center mt-5 mb-5 fs-2'>You're searching for
      <span class='text-success'>{{categoryName}}</span></h1>
  </div>
</div>

{{! Guitars Category }}
<div class='container'>
  <div class='row justify-content-center gx-5'>
    {{#each guitarsPosts as |guitarPost|}}
      <div class='col-md-4 mb-3'>
        <div class='card h-100' style='background-color: rgba(172, 165, 158, 0.397);'>
          <h2 class='card-header d-flex justify-content-center bg-success fs-3' style='color: white;'>
            Instrument for sale!
          </h2>
          <div class='card-header text-body-tertiary justify-content-center text-center' style='height: 50px; align-content: center; font-size: 14px;'>
            Posted by
            {{user.name}}
            on
            {{format_date createdAt}}
            at
            {{format_time createdAt}}
          </div>
          <div class='pb-0'>
            <span class='card-title text-center'>
              <a href='/posts/{{id}}' class='post-link text-success fs-4 d-flex justify-content-center text-decoration-none text-shadow mt-2'>
                {{title}}
              </a>
            </span>
            <div class='card-price mb-3 d-flex justify-content-center'>
              <span class='badge mt-2 bg-success w-25 py-3 fs-6 box-shadow'>${{price}}</span>
            </div>
          </div>
          {{#if image}}
            <div class='mx-auto flex-grow-1' style='display: flex; max-width: 75%; align-items: center;'>
              <img src='{{image}}' class='mx-auto' alt='Product Image' style='display: block; max-width: 100%; max-height: 100%; border-radius: 10px;' />
            </div>
          {{else}}
            <svg
              xmlns='http://www.w3.org/2000/svg'
              class='d-block user-select-none ms-4'
              width='100%'
              height='100%'
              aria-label='Placeholder: Image cap'
              focusable='false'
              role='img'
              preserveAspectRatio='xMidYMid slice'
              viewBox='0 0 318 180'
              style='font-size:1.125rem;text-anchor:middle'
            >
              <rect y='18' x='5' rx='8' ry='8' width='90%' height='90%' fill='#868e96'></rect>
              <text x='46%' y='53%' text-anchor='middle' fill='#dee2e6' dy='.3em'>Product Image</text>
            </svg>
          {{/if}}
          <div class='d-flex mt-4 mb-3 border-top border-bottom px-2 py-2 border-success text-bg-light'>
            <p class='card-subtitle text-muted mx-auto text-center'>{{content}}</p>
          </div>
          <div class='card-options mb-3 mx-auto'>
            <a href='#' class='card-link text-success text-decoration-none fw-bold'>Buy now</a>
            <a href='/posts/{{id}}' class='card-link text-success text-decoration-none fw-bold'>View Post</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

