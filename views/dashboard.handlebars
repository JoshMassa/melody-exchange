<div class="row">
    <div>
        <h2 id="name" class="mt-3 text-center">Welcome, <span class="text-success">{{name}}!</span></h2>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-5 flex-column">
            <h3 id="yourPosts" class="">Your Posts:</h3>
            <div class="post-list">
                {{#each posts}}
                <a href="/posts/{{id}}" class="post-link">
                    <div class="card m-3">
                        <div class="card-header">
                            <h2>{{title}}</h2>
                            <span>Posted by you on {{format_date createdAt}} at {{format_time createdAt}}</span>
                        </div>
                        <div class="card-body">
                            <p>{{content}}</p>
                        </div>
                    </div>
                </a>
                {{/each}}
            </div>
        </div>

        <div class="col-4">
            <h3 id="newPostHeader" class="text-center">Create New Post:</h3>
            <div id="form-adjust-create" class="container hidden">
                {{!-- <h3 id="newPostHeader">Create New Post</h3> --}}
                <div class="col">
                    {{!-- <h3 id="newPostHeader">Create New Post</h3> --}}
                    <form class="form new-post-form">
                        <div>
                            <label for="post-title" class="form-label mt-4">Title:</label>
                            <input type="text" class="form-control" id="post-title" placeholder="Post Title">
                        </div>
                        <div>
                            <label for="new-post-content" class="form-label mt-4">Content:</label>
                            <textarea class="form-control" type="text" id="new-post-content" placeholder="What are you selling?" rows="3"></textarea>
                        </div>
                        {{!-- <div class="form-group">
                            <label for="new-post-content">Content</label>
                            <textarea class="form-input" type="text" rows="5" id="new-post-content"
                                name="new-post-content"></textarea>
                        </div> --}}
                        <div class="form-group">
                            <button type="submit" id="create-post-button" class=" btn btn-success m-3">Create
                                Post</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

