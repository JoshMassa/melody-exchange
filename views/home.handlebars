{{#each posts}}
  <a href="/posts/{{this.id}}" class="post-link">
    <div class="card">
      <div class="card-header">
        <h2>{{this.title}}</h2>
        <span>Posted by
          {{user.name}}
          on
          {{format_date this.createdAt}} at {{format_time this.createdAt}}</span>
      </div>
      <div class="card-body">
        <p>{{this.content}}</p>
      </div>
    </div>
  </a>
{{/each}}