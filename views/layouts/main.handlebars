<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css" />
    <title>Ecommerce Project</title>
  </head>
  <body>
    <div>
      <header class="w-100">
        {{! <div class="container"> }}
        <nav id="navbar" class="pb-3 pt-3">
          <figure id="navbar-logo">
            <img src="/images/logo.png" alt="main-logo" id="main-logo" />
          </figure>
          <ul>
            <a class="navbarEl" href="/">Home</a>
            <a class="navbarEl" href="/">Guitars</a>
            <a class="navbarEl" href="/">Bass Guitars</a>
            <a class="navbarEl" href="/">Drums</a>
            <a class="navbarEl" href="/">Keyboard</a>
            <a class="navbarEl" href="/">Amps and Effects</a>
            <a class="navbarEl" href="/dashboard">Dashboard</a>
            {{! Conditionally renders login or logout links based on user's current login status }}
            {{#if logged_in}}
              <a class="navbarEl" id="logout" href="/logout">Logout</a>
            {{else}}
              <a class="navbarEl" id="login" href="/login">Login</a>
            {{/if}}
            <p id="title">{{this.title}}</p>
          </ul>
        </nav>
        {{! </div> }}
      </header>
    </div>
    {{{body}}}

    {{#if logged_in}}
    <script src="./js/logout.js"></script>
    {{/if}}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>