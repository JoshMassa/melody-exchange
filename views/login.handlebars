{{!-- login card --}}
  <div class="card-body mt-4 d-flex justify-content-center">
    <form class="form login-form">
    <h1 class="text-secondary">Login</h1>
    <div>
      <label for="email-login" class="form-label mt-4">Email address</label>
      <input type="text" class="form-control" id="email-login" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div>
      <label for="exampleInputPassword1" class="form-label mt-4">Password</label>
      <input type="password" class="form-control" id="password-login" placeholder="Password" autocomplete="off">
    </div>
    <div>
    <button type="submit" class="btn btn-outline-success mt-3" id="login-btn">Log In</button>
    <p id="options" class="mt-2">Don't have an account? <a id="signup" href="/signup" class="text-secondary">Sign Up</a></p>
  </div>
    </form>

<script src="/js/login.js"></script>